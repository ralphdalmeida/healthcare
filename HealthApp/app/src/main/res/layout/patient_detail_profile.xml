<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/patient_detail_profile_piture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/patient_photo_description"
        app:srcCompat="@mipmap/ic_account_circle" />

    <TextView
        android:id="@+id/patient_detail_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/card_dimens"
        android:layout_marginEnd="@dimen/card_dimens"
        android:layout_gravity="center_vertical"
        android:text="@string/patient_name_default"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</LinearLayout>
