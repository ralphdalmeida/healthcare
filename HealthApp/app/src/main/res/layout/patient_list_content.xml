<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/patient_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_dimens"
        app:cardElevation="@dimen/card_dimens"
        app:cardCornerRadius="@dimen/card_dimens"
        tools:context="techtest.ehealthinnovation.org.healthapp.PatientListActivity">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_dimens">

            <ImageView
                android:id="@+id/patient_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/card_margin"
                android:layout_marginEnd="@dimen/card_margin"
                android:src="@mipmap/ic_account_box"
                android:contentDescription="@string/patient_photo_description"/>

            <TextView
                android:id="@+id/patient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/patient_photo"
                android:layout_toRightOf="@+id/patient_photo"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/card_dimens"
                android:layout_marginEnd="@dimen/card_dimens"
                android:text="@string/patient_name_default"
                android:textStyle="bold" />

        </RelativeLayout>

</android.support.v7.widget.CardView>